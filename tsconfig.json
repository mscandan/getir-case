{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES7", "ES2019", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["jest", "node"],
    "baseUrl": "src"
  },
  "include": ["src", "typings"],
  "exclude": ["node_modules", "./src/assets", "__tests__"]
}
